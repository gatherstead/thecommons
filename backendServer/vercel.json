{
    "version": 2,
    "builds": [
        {
            "src": "backend/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb"
            }
        },
        {
            "src": "pyproject.toml",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles_build/static"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "backend/wsgi.py"
        }
    ],
    "build": {
        "env": {
            "PYTHON_VERSION": "3.12"
        }
    },
    "installCommand": "pip install uv && uv sync"
}